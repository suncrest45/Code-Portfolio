{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "g++",
            "args": [
                "-g",
                "-o", 
                "gnu.exe", 
                "driver.cpp", 
                  "-O0",
                  "-Werror",
                  "-Wall", 
                  "-Wextra", 
                  "-std=c++17",
                  "-Wold-style-cast", 
                "-Woverloaded-virtual",
                "-Wsign-promo",
                "-Wctor-dtor-privacy",
                "-Wnon-virtual-dtor",
                "-Weffc++",
                    "-pedantic"
                
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}